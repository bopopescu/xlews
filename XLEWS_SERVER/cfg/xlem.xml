<?xml version="1.0" encoding="UTF-8" ?>

<!-- XLEWS Web Server Configuration -->

<xlem version="1.0.0">

<!-- Server ports and security configuration -->
<!-- Use numPort=80 only if you're sure that no other services are already running on this port! -->
<xlemTCP>8088</xlemTCP>

<!--  XLEWS Server Mode -->
<!-- forceUpdate="1" force page re-compiling everytime -->
<!-- a blank ("") or "0" value enable page cache management -->
<xlemMode>1</xlemMode>

<!--  Temporary server working directory -->
<xlemWorkDir>/work</xlemWorkDir>

<!--  Session Management -->
<!--  maxNumb= maximimum concurrent session number -->
<!--  timeExp= maximum inactivity timeout (in seconds) for a session -->
<xlemSESSIONS maxNumb="200" timeExp="1200"/>


<!-- Log section -->
<xlemLog path="../log/"/>



<!--  XLem (Virtual) Hosts definition -->
<!--  "$default" host name  -->

 <xlemHosts>
 
 	<xlemHost name="take5" enabled="true" application="take5" home="index.html">
 	</xlemHost>
 	
 	<xlemHost name="junof" enabled="true" application="junof" home="index.xlem">
 	</xlemHost>
 	
 	<xlemHost name="10.0.0.88" enabled="true" application="junof" home="index.html">
 	</xlemHost>
 	
 	<xlemHost name="192.168.1.4" enabled="true" application="junof" home="index.html">
 	</xlemHost>
 	
 
 	<xlemHost name="your.host2" enabled="true" application="yourAppName" home="index.xlem">
 	</xlemHost>
 
 	<xlemHost name="pippo.portal" enabled="true" application="ext1" home="index.xlem">
